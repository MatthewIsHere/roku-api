{
    "compilerOptions": {
        "module": "esnext",
        "outDir": "dist/",
        "target": "esnext",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "traceResolution": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
}